<div class="search">
  <%= form_with url: authors_path, method: :get do |form| %>
    <%= form.text_field :query %>
    <%= form.button type="submit", name: "commit", value: "search" do %>
      &#128269;
    <% end %>
  <% end %>
</div>

<div class="section">
  <div class="section-title">
    <div class="title"><%= @section_title %></div>
    <%- if librarian_signed_in? %>
      <%= link_to "New Author", new_author_path %>
    <% end %>
  </div>
</div>

<div class="entities">
  <% @authors.each do |author| %>
    <%= link_to author_path(author), class: "entity" do %>
        <%= author.name %>
    <% end %>
  <% end %>
</div>
