    <div class="field">
      <%= form.label :book_id, style: "display: block" %>
      <%= form.select :book_id, options_for_select(@books) %>
    </div>

    <div class="field">
      <%= form.label :returned_date, style: "display: block" %>
      <%= form.date_field :returned_date %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
