<div class="show-book">
  <div class="hero">
    <%- if @book.cover.attached? %>
      <%= image_tag @book.cover %>
    <% else %>
      <svg fill="#ababab" height="300px" width="300px" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 487.5 487.5" xml:space="preserve" stroke="#000000" stroke-width="0.004875"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <g> <path d="M437,12.3C437,5.5,431.5,0,424.7,0H126.3C84.4,0,50.4,34.1,50.4,75.9v335.7c0,41.9,34.1,75.9,75.9,75.9h298.5 c6.8,0,12.3-5.5,12.3-12.3V139.6c0-6.8-5.5-12.3-12.3-12.3H126.3c-28.3,0-51.4-23.1-51.4-51.4S98,24.5,126.3,24.5h298.5 C431.5,24.5,437,19,437,12.3z M126.3,151.8h286.2V463H126.3c-28.3,0-51.4-23.1-51.4-51.4V131.7 C88.4,144.2,106.5,151.8,126.3,151.8z"></path> <path d="M130.5,64.8c-6.8,0-12.3,5.5-12.3,12.3s5.5,12.3,12.3,12.3h280.1c6.8,0,12.3-5.5,12.3-12.3s-5.5-12.3-12.3-12.3H130.5z"></path> <path d="M178,397.7c6.3,2.4,13.4-0.7,15.8-7.1l17.9-46.8h62.7c0.5,0,0.9-0.1,1.3-0.1l17.9,46.9c1.9,4.9,6.5,7.9,11.4,7.9 c1.5,0,2.9-0.3,4.4-0.8c6.3-2.4,9.5-9.5,7.1-15.8l-54-141.2c-3-7.9-10.4-13-18.8-13c-8.4,0-15.8,5.1-18.8,13l-54,141.2 C168.5,388.2,171.7,395.2,178,397.7z M243.7,260l22.7,59.3h-45.3L243.7,260z"></path> </g> </g> </g></svg>
    <% end %>

    <%- if @book.available? %>
      <a href="#" class="btn request">Available</a>
    <% else %>
      <a href="#" class="btn disabled" disabled>Not Available</a>
    <% end %>

    <%- if librarian_signed_in? %>
      <%= link_to "Edit Book", edit_book_path(@book), class: "btn wishlist" %>
    <% else %>
      <a href="#" class="btn wishlist <%= user_signed_in? ? '': 'disabled'%>">Add to Wishlist</a>
    <% end %>
  </div>
  <div class="details">
    <div class="title-section">
      <div class="title">
        <%= @book.title %>
      </div>

      <a class="share-btn" href="#">
        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 1 0 0 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186 9.566-5.314m-9.566 7.5 9.566 5.314m0 0a2.25 2.25 0 1 0 3.935 2.186 2.25 2.25 0 0 0-3.935-2.186Zm0-12.814a2.25 2.25 0 1 0 3.933-2.185 2.25 2.25 0 0 0-3.933 2.185Z" />
        </svg>
      </a>
    </div>

    <div class="meta-info">
      <div class="author-name">
        <%= @author.name %>
      </div>
      
      <div class="genre">
        <%= @book.category %>
      </div>
    </div>

    <div class="rating"> Rating </div>

    <div class="description">
      <div class="title">
        Description
      </div>
      <div class="content">
        <%= @book.description %>
      </div>
    </div>

    <div class="book-section">
      <div class="title">Similar Books</div>
      <div class="books">
        <%= render @similar %>
      </div>
    </div>

    <div class="description">
      <div class="title">Author Details</div>
      <div class="content"><%= @author.description %></div>
    </div>

    <div class="book-section">
      <div class="title">Same Author Books</div>
      <div class="books">
        <%= render @author_books %>
      </div>
    </div>

  </div>
</div>
